<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashScreen">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.jt17.neofilms.ui.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_moviesFragment"
            app:destination="@id/moviesFragment" />
        <action
            android:id="@+id/action_homeFragment_to_showsFragment"
            app:destination="@id/showsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_modalBottomSheet"
            app:destination="@id/modalBottomSheet" />
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/moviesFragment"
        android:name="com.jt17.neofilms.ui.fragments.MoviesFragment"
        android:label="fragment_movies"
        tools:layout="@layout/fragment_movies" />
    <fragment
        android:id="@+id/showsFragment"
        android:name="com.jt17.neofilms.ui.fragments.ShowsFragment"
        android:label="fragment_shows"
        tools:layout="@layout/fragment_shows" />
    <dialog
        android:id="@+id/modalBottomSheet"
        android:name="com.jt17.neofilms.ui.helpers.ModalBottomSheet"
        android:label="ModalBottomSheet" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.jt17.neofilms.ui.fragments.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/splashScreen"
        android:name="com.jt17.neofilms.ui.fragments.SplashScreen"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_splashScreen_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>