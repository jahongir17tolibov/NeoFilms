<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:backgroundTint="@color/item_color"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="14dp">

            <androidx.cardview.widget.CardView style="@style/Images_title"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/shows_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ranking_shows"
                    style="@style/For_ranking" />

                <TextView
                    android:id="@+id/series_name"
                    style="@style/Title_text"
                    android:text="Moon Knight" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/star"
                    style="@style/Star_Icon" />

                <TextView
                    android:id="@+id/imdbRating_shows"
                    style="@style/Texts_inBottomOf_Title"
                    android:layout_marginStart="4dp"
                    android:text="9.9"
                    android:textColor="@color/black" />

                <TextView
                    style="@style/Texts_inBottomOf_Title"
                    android:layout_marginStart="20dp"
                    android:text="year: " />

                <TextView
                    android:id="@+id/year_sh"
                    style="@style/Texts_inBottomOf_Title"
                    android:text="2022"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </LinearLayout>


            <TextView
                android:id="@+id/crew_shows"
                style="@style/Text_crew" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>