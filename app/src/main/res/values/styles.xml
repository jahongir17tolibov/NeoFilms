<?xml version="1.0" encoding="utf-8"?>
<resources>

<!--    for imdb rating and movieOrshow year item_ly-->
    <style name="Texts_inBottomOf_Title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="fontFamily">@font/cambay</item>
        <item name="android:textSize">14sp</item>

    </style>

<!--    for rank item_ly-->
    <style name="For_ranking">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="fontFamily">@font/cambay</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:text">100</item>
    </style>

<!--    MoviesOrShows image item_ly-->
    <style name="Images_title">
        <item name="android:layout_height">130dp</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

<!--    For title Movie or Shows name item_ly-->
    <style name="Title_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/cambay</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

<!--    item_ly star-->
    <style name="Star_Icon">
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:src">@drawable/star_svgrepo_com</item>
    </style>

<!--    Movies or shows crew-->
    <style name="Text_crew">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:maxEms">10</item>
        <item name="android:textSize">11sp</item>
        <item name="android:text">Francis Ford Coppola (dir.), Marlon Brando, Al Pacino</item>
        <item name="fontFamily">@font/cambay</item>

    </style>


</resources>
