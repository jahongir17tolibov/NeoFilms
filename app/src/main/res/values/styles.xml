<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    for imdb rating and movieOrshow year item_ly-->
    <style name="Texts_inBottomOf_Title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="fontFamily">@font/mada</item>
        <item name="android:textSize">14sp</item>

    </style>

    <!--    for rank item_ly-->
    <style name="For_ranking">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="fontFamily">@font/mada_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#CCE6D1F3</item>
    </style>

    <!--    MoviesOrShows image item_ly-->
    <style name="Images_title">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">130dp</item>
    </style>

    <!--    For title Movie or Shows name item_ly-->
    <style name="Title_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="fontFamily">@font/mada_semibold</item>
        <item name="android:textColor">@color/light_dark_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--    item_ly star-->
    <style name="Star_Icon">
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:src">@drawable/star_svgrepo_com</item>
    </style>

    <!--    Movies or shows crew-->
    <style name="Text_crew">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="fontFamily">@font/mada</item>
        <item name="android:ellipsize">end</item>

    </style>

    <!--    universal small texts style-->
    <style name="Universal_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/mada</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Black_Frame_Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.5dp</item>
        <item name="background">@color/black</item>
    </style>


</resources><!--    android:id="@+id/crew_movies"-->
